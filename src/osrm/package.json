{
  "engines": {
    "node": "6.x.x"
  },
  "dependencies": {
    "express": "^4.15.2",
    "osrm": "^5.7.0"
  },
  "scripts": {
    "start": "node server.js",
    "step-1": "cp data/custom.lua node_modules/osrm/profiles/",
    "step-2": "node_modules/osrm/lib/binding/osrm-extract data/singapore.osm.pbf -p node_modules/osrm/profiles/custom.lua",
    "step-3": "node_modules/osrm/lib/binding/osrm-contract data/singapore.osrm",
    "build":  "npm run step-1 && npm run step-2 && npm run step-3",
    "deploy": "now"
  }
}
